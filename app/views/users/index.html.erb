<% provide(:title, 'All users') %>
<h1>Students</h1>
<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <% if not user.admin? %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
      <% if not user.verified? %>
       |<%= link_to "verify", verify_user_path(user), method: :post,
                                  data: { confirm: "You sure?" } %>
      <% end %>
       | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
    </li>
    <% end %>
  <% end %>
</ul>
<%= will_paginate %>
